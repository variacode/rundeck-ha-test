<joblist>
    <job>
        <description></description>
        <executionEnabled>true</executionEnabled>
        <loglevel>INFO</loglevel>
        <name>Create File each N seconds.</name>
        <schedule>
            <month month='*' />
            <time hour='*' minute='*' seconds='0/20' />
            <weekday day='*' />
            <year year='*' />
        </schedule>
        <scheduleEnabled>true</scheduleEnabled>
        <sequence keepgoing='true' strategy='node-first'>
            <command>
                <description>creates a file in the shared directory every 15 seconds</description>
                <exec>powershell date > c:\\testresults\\jobresult-r2.txt</exec>
            </command>
        </sequence>
    </job>
</joblist>
